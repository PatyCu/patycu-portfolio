---
import Layout from "./Layout.astro"

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title} description={frontmatter.description}>
    <section class="p-8">
        <h2 class="text-cyan-500">{frontmatter.title}</h2>
        <div class="flex flex-wrap">
            <div class="basis-1/2">
                <p class="text-slate-300/70 text-sm italic">
                    Published on {frontmatter.pubDate.slice(0, 10)} by {frontmatter.author}
                </p>

                <blockquote class="text-xl italic font-semibold text-gray-100 p-8">
                    <svg
                        class="size-8 text-gray-100 mb-4"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="currentColor"
                        viewBox="0 0 18 14"
                    >
                        <path
                            d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
                        ></path>
                    </svg>
                    <p>{frontmatter.description}</p>
                </blockquote>

                <slot />
            </div>
            <img src={frontmatter.image.url} alt={frontmatter.title.alt} class="basis-1/2 max-w-lg" />
        </div>
    </section>
</Layout>

<style is:global>
    /* Unscoped, delivered as-is to the browser.
     Applies to all <h1> tags on your site. */
    h2 {
        color: turquoise;
    }
</style>
