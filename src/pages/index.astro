---
import Layout from "../layouts/Layout.astro"
import Batch from "../components/Batch.astro"
import SocialPill from "../components/SocialPill.astro"
import GitHub from "../icons/GitHub.astro"
import LinkedIn from "../icons/LinkedIn.astro"
import Twitter from "../icons/Twitter.astro"
import Email from "../icons/Email.astro"
import Timeline from "../components/Timeline.astro"
---

<Layout
    title="Paty Cuenca's portfolio - Senior Engineering Manager and Frontend Developer"
    description="Paty Cuenca is a Senior Engineering Manager and Frontend Developer with +15 years of experience. Specialised in leading autonomous and high-performing front-end teams. Tinkering with front-end development non-professinally (so to not to get exceedingly rusty)."
>
    <main class="mx-auto flex flex-wrap w-9/12">
        <!-- Section: Intro -->
        <section class="mt-12" id="#top">
            <h1 class="text-white">Hi, I am Paty 🙋🏻‍♀️</h1>
            <h2 class="text-balance">Senior Engineering Manager and Front End Developer.</h2>
            <h3>+15 years of experience.</h3>
            <p>From sunny <span class="text-cyan-500">Barcelona</span> ☀️.</p>
            <p>Specialised in leading autonomous and high-performing front-end teams</p>
            <p>Tinkering with front-end development non-professionally (so to not to get exceedingly rusty)</p>
            <div>
                <Batch color="green">Looking for opportunities</Batch>
                <Batch color="yellow">IC Management</Batch>
                <Batch color="yellow">Leader of leaders</Batch>
                <Batch color="blue">Front End</Batch>
                <Batch color="blue">JavaScript</Batch>
                <Batch color="blue">React</Batch>
            </div>
            <ul class="flex gap-x-4 mt-4 leading-none">
                <li class="">
                    <SocialPill href="https://www.linkedin.com/in/patycu/">
                        <LinkedIn class="size-5" />
                        LinkedIn
                    </SocialPill>
                </li>
                <li>
                    <SocialPill href="https://github.com/PatyCu">
                        <GitHub class="size-5" />
                        GitHub
                    </SocialPill>
                </li>
                <li>
                    <SocialPill href="https://twitter.com/patycuEM">
                        <Twitter class="size-5" />
                        Twitter
                    </SocialPill>
                </li>
                <li>
                    <SocialPill href="mailto:hola@patycuenca.com">
                        <Email class="size-5" />
                        hola@patycuenca.com
                    </SocialPill>
                </li>
            </ul>
        </section>
        <section class="mt-8" id="experience">
            <h2 class="text-white">👩🏻‍💻 Experience</h2>
            <div class="mt-4">
                <Timeline />
            </div>
        </section>
    </main>
</Layout>
