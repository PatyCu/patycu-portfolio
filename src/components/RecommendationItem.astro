---
const { recommendation } = Astro?.props
interface Props {
    recommendation: {
        name: string
        position: string
        experience: string
        location: string
        date: string
        recommendation: string[]
    }
}
---

<div class="p-4 bg-slate-600/50 my-2 border border-transparent rounded-lg">
    <p class="flex flex-wrap gap-x-2 text-xl">
        <span class="font-bold">{recommendation.name}</span> · <span class="font-bold">{recommendation.position}</span> ·
        <span class="text-slate-400">{recommendation.date}</span>
    </p>
    <p class="flex flex-wrap gap-x-2 text-slate-400">
        <span class="font-bold">↪{recommendation.experience}</span> · <span class="font-bold"
            >{recommendation.location}</span
        >
    </p>
    <blockquote class="italic font-semibold text-gray-100 p-8">
        <svg
            class="size-4 text-gray-100 mb-4"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 18 14"
        >
            <path
                d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
            ></path>
        </svg>
        {recommendation.recommendation.map((recommendation) => <p class="mt-4">{recommendation}</p>)}
    </blockquote>
</div>
