---
import { PROJECTS } from "../data/PROJECTS.ts"
import { SIDE_PROJECTS } from "../data/SIDE_PROJECTS.ts"

import ProjectItem from "./ProjectItem.astro"

interface Project {
    title: string
    description: string
    link: string | null
    image: string
    github: string | null
    tags: string[]
}

interface Props {
    type: "work" | "side"
}

const { type } = Astro.props
const projects = type === "work" ? PROJECTS : SIDE_PROJECTS
---

<ol class="flex flex-wrap gap-x-2">
    {
        projects.map((project) => (
            <ProjectItem
                title={project.title}
                description={project.description}
                link={project.link}
                image={project.image}
            />
        ))
    }
</ol>
