---
import { PROJECTS } from "../data/projects.js"

interface Project {
    title: string
    description: string
    link: string | null
    image: string
    github: string | null
    tags: string[]
}
---

<ol class="flex flex-wrap gap-x-2">
    {
        PROJECTS.map(({ title, description, link, image }: Project) => (
            <li class="p-2 bg-slate-600/50 my-2 w-[300px] border border-transparent rounded-lg">
                <div>
                    <h3 class="text-cyan-500">{title}</h3>
                    <img src={image} alt="" class="w-full rounded-lg my-2" />
                    <p>
                        <a href={link} class="text-sm text-slate-300/80 hover:text-cyan-500/80">
                            {link}
                        </a>
                    </p>
                    <p>{description}</p>
                </div>
            </li>
        ))
    }
</ol>
