---
import { PROJECTS } from "../data/PROJECTS.ts"

import ProjectItem from "./ProjectItem.astro"

interface Project {
    title: string
    description: string
    link: string | null
    image: string
    github: string | null
    tags: string[]
}
---

<ol class="flex flex-wrap gap-x-2">
    {
        PROJECTS.map(({ title, description, link, image }: Project) => (
            <ProjectItem title={title} description={description} link={link} image={image} />
        ))
    }
</ol>
